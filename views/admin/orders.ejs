<!DOCTYPE html>
<html>
<head>
  <title>Admin - Orders</title>
</head>
<body>

<h2>Admin - Orders</h2>

<table border="1" cellpadding="10">
  <tr>
    <th>ID</th>
    <th>Total</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% if (orders.length === 0) { %>
    <tr>
      <td colspan="4">No orders found</td>
    </tr>
  <% } %>

  <% orders.forEach(order => { %>
    <tr>
      <td><%= order._id %></td>
      <td><%= order.total %></td>
      <td><%= order.status %></td>
      <td>
        <% if (order.status !== "Delivered") { %>
          <form method="POST" action="/admin/orders/<%= order._id %>/status">
            <button>Next Status</button>
          </form>
        <% } %>
      </td>
    </tr>
  <% }) %>

</table>

</body>
</html>
