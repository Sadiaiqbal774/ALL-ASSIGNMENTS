<h1><%= product._id ? "Edit Product" : "Add Product" %></h1>

<form action="<%= product._id ? '/admin/products/edit/' + product._id : '/admin/products/add' %>" method="POST">

    <label>Name</label>
    <input type="text" name="name" value="<%= product.name %>" required><br>

    <label>Price</label>
    <input type="number" name="price" value="<%= product.price %>" required><br>

    <label>Category</label>
    <input type="text" name="category" value="<%= product.category %>" required><br>

    <label>Image URL</label>
    <input type="text" name="image" value="<%= product.image %>"><br>

    <label>Description</label>
    <textarea name="description"><%= product.description %></textarea><br>

    <button type="submit">Save</button>
</form>
